 */
function product_menu() {
  $items = array();
  $items['product/add'] = array(
    'title' => 'Add product',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('product_page_form'),
    'access callback' => TRUE,
  );
  return $items;
}

